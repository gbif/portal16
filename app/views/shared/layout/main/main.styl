
html, body, #page-wrapper {
	height 100%
	width 100%
	overflow-x hidden
	background $content_bg
}
+isAbove($laptop) {
	html, body, #page-wrapper {
		min-height 100%
		height auto
	}
}
.siteCanvas {
	height 100%
	width 100%
}
ul,ol {
	margin 0
	list-style none
}





//fixed toggle
.toggleDrawer {
	z-index 10
	width 50px
	height 50px
	background red
}
+isBelow($laptop) {
	.toggleDrawer {
		position absolute
		bottom 20px
		right 20px
	}
}
+isAbove($laptop) {
	.toggleDrawer {
		position fixed
		top 95px
		right initial
	}
}




.contentArea__tabs {
	width 100%
	background rgba(255,255,255,0.5)
	position absolute
	bottom 20px
	left 20px
	z-index 10
	width 50px
	height 50px
	overflow hidden
	ol {
		max-width 100%
	}
	li {
		display inline-block
		width 50px
		height 50px
		border-radius 25px
		margin 0 10px 10px 0
		background deepskyblue
		float left
	}
	&:hover {
		width auto
		height auto
	}
}

