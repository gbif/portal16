//ANCHOR FOX OFFSET FOR FIXED HEADER HEIGHT
+isAbove($laptop) {
    .anchor:before { //compensate for the fixed header on desktop
        display: block
        content: " "
        height: $navBar_height
        margin-top: -($navBar_height)
        visibility: hidden
    }
}

//Safari hack to prevent flicker. At mobile breakpoint it removes scrollbar and then thinks it is larger, leading to the laptop view. Where there is a scrollbar that makes the window smaller etc.
+isBetween(($laptop - 15px), $laptop) {
    html {
        overflow-y scroll
    }
}

