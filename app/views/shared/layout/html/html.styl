html, body, .site-wrapper {
    min-height 100%
    width 100%
    background $content_background
    touch-action manipulation
}
body {
    padding-top 50px
}

+isAbove($laptop) {
    html, body, .site-wrapper {
        min-height 100%
    }
}

.site-wrapper {
    display flex
    flex-direction column
    >main {
        flex 1 1 auto
    }
}
.site-content__page {
    min-height "calc(100vh - %s)" % $navBar_height
}
