.scrollable-y {
    overflow-y auto
}

.fillHeight {
    height "calc(100vh - %s)" % $navBar_height
}

.center-block {
    display block
    margin-right auto
    margin-left auto
}

.whiteSpace-preLine {
    white-space pre-line
}

.uppercase-first::first-letter {
    text-transform uppercase
}

.overflow-hidden {
    overflow hidden
}

.no-break {
    break-inside avoid-column
}

.inline-block {
    display inline-block
}

//Hardly utilities, but created as such instead of modifiers - @Burke wouldn't it make better sense as modifiers?
.white-background {
    background-color $paper
}

.bare-background, .gray-background {
    background-color $greyBackground
}

.light-background {
    background-color $lightBackground
}

.black-background {
    background-color #222 // As per design mocks
    color: #eee;
}

.lighter-background {
    background-color $lighterBackground
}
.brand-background {
    background-color $navBar_background_color
}

.alert-background {
    background-color $alertBackground
}

.horizontal-stripe--alternating-background {
    background-color $lightBackground
    &:nth-of-type(even) {
        background-color $paper
    }
}

.text-light {
    font-weight 300
}
.discreet {
    color $discreetInk
}
.text-error {
    color tomato
}

