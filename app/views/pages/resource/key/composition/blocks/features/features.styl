+isAbove(800px) {
  .featuresBlock {
    margin-left: (-($halfGutter / 2))
    margin-right: (-($halfGutter / 2))
    display flex
    flex-wrap wrap
    justify-content space-between
    .featureCard {
      width: "calc(100% / 4 - %s)" % ($halfGutter);
      flex: 0 1 auto;
      margin: $halfGutter ($halfGutter/ 2);
      &__contentType {
        display: none;
      }
      &__type {
        display: block;
      }
    }
  }
  .featuresBlock-length-4 {
    .featureCard {
      width: "calc(100% / 2 - %s)" % ($halfGutter);
    }
  }
  .featuresBlock-length-3 {
    .featureCard {
      width "calc(100% / 3 - %s)" % ($halfGutter)
      flex 0 1 auto
    }
  }
  .featuresBlock-length-2 {
    .featureCard {
      width "calc(100% / 2 - %s)" % ($halfGutter)
      flex 0 1 auto
      .card__content {
        position: absolute;
        bottom: 0;
        left: 0;
        background: #00000055;
        right: 0;
      }
      &__title, &__footer {
        color: white;
      }
      &__type {
        top: 5px;
        bottom: auto;
      }
    }
  }
  .featuresBlock-length-1 {
    .featureCard {
      width 100%;
      flex 0 1 auto
      &__image {
        padding-bottom: 35%;
        overflow: hidden;
        img {
          width: 100%;
        }
      }
      &__title {
        font-size 2em;
      }
      .card__content {
        position: absolute;
        bottom: 0;
        left: 0;
        background: #00000055;
        width: 50%;
        top: 0;
      }
      &__title, &__footer {
        color: white;
      }
      &__type {
        top: 5px;
        bottom: auto;
      }
    }
  }
}

+isAbove(1000px) {
  .featuresBlock-length-4 {
    .featureCard {
      width: "calc(100% / 4 - %s)" % ($halfGutter);
    }
  }
}

