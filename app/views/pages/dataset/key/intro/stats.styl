.summaryStats {
    &__item {
        padding-top 10px
        padding-bottom 10px
        color inherit
    }
    >a {
        &:hover {
            color inherit
            text-decoration underline
        }
    }
    &__percentage {
        display block
        float left
        height 50px
        line-height 25px
        padding-left 10px
        font-weight normal
        font-size 18px
        max-width calc(100% - 50px)
        overflow hidden
        > div {
            font-size 14px
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
        }
    }
    &__description {
        display block
        float left
        height 50px
        line-height 50px
        padding-left 10px
        font-weight normal
    }

    &__circle {
        width 50px
        height 50px
        line-height 50px
        font-size 50px
        margin auto
        display inline-block
        float left
        color darken($greyBackground, 10)
        text-decoration none
        &:hover {
            text-decoration none
            color darken($greyBackground, 20)
        }
        &--occurrences, &--species {
            border-radius 50%
        }
        &--occurrences{
            background $navBar_background_color
        }
        &--species {
            background #8ab9c1
        }
    }
    &__simple {
        color inherit
        &__count {
            padding 20px
            padding-bottom 5px
            font-size 18px
        }
        &__description {
            padding 20px
            padding-top 0
        }
    }
}
.rtl {
    .summaryStats {
        &__percentage {
            float right
            padding-left 0
            padding-right 10px
        }
        &__description {
            float right
            padding-left 0
            padding-right 10px
        }

        &__circle {
            float right
        }
    }
}