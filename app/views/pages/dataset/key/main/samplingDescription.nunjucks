<section class="horizontal-stripe--paddingless white-background dataset-key__text dataset-key__sampling" ng-if="datasetKey.dataset.samplingDescription">
    <div>
        <a href="" id="methodology"></a>
        <div class="anchor-block--tabs" id="methodologyBlock">
            <h3 translate="dataset.methodology" class="text-capitalize">Methodology</h3>
            <div>
                <div ng-repeat="field in ['studyExtent', 'sampling', 'qualityControl']" ng-if="datasetKey.dataset.samplingDescription[field]">
                    <h4 translate="dataset.{{ field }}" class="text-capitalize">{{ field }}</h4>
                    <div ng-bind-html="datasetKey.dataset.samplingDescription[field]"></div>
                </div>

                <div ng-if="datasetKey.dataset.samplingDescription.methodSteps.length > 0">
                    <h4 translate="dataset.methodSteps" class="text-capitalize">Method steps</h4>
                    <ol>
                        <li class="counted-section--connected" ng-repeat="step in datasetKey.dataset.samplingDescription.methodSteps">
                            <div>
                                <span class="badge badge--white">{{ $index }}</span>
                            </div>
                            <div ng-bind-html="step"></div>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

