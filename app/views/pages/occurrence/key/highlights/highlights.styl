.occurrenceKey__highlights {
    .issue-summary {
        max-width 500px
        .badge {
            font-weight 300
        }
    }
}

+isAbove($tablet) {
    .balanced-row {
        display flex
        justify-content space-around
    }
}

.btn-circle-md {
    width 30px
    height 30px
    padding 0
    text-align center
    font-size 20px
    line-height 30px
    border-radius 15px
    background $blueTintedBlack
    color: white
    display inline-block
    transition background 200ms ease;
    position: relative;
    &:hover, &:focus {
        color: white;
        background: darken($blueTintedBlack, 10)
        text-decoration: none;
    }
    &__count {
        background: white;
        color: #464646;
        position: absolute;
        bottom: -5px;
        left: -5px;
        border-radius: 5px;
        font-size: 12px;
        display: inline-block;
        line-height: 1;
        padding: 3px;
        border: 1px solid #929292;
    }
}