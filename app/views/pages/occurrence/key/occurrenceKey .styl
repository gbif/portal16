.allData {
	h2 {
		margin-top 2rem
		border-bottom 1px solid #ddd
	}
	dl>div {
		div>dt {
			display none
		}
	}
	dd {
		padding-left 1rem
	}
	dt {
		width 300px
	}
	
	.discreet {
		color #ccc
	}
}
+isAbove($tablet) {
	.allData {
		dl>div {
			padding 0.25rem 1.5rem
			&:hover {
				background #ECECEC
			}
			dd {
				padding-left 0
			}
			dt {
				font-weight normal
			}
			dt, dd{
				display inline-block
			}
			div>dt {
				display inline-block
				visibility hidden
			}
		}
		&.compare .isDifferent {
			position relative
			&:before {
				content ' '
				display block
				position absolute
				background yellow
				width 10px
				height 10px
				left 5px
				border-radius 50%
				line-height 1rem
				text-align center
				top 9px
			}
		}
	}
}





.multiToggle {
    text-align: center
	margin vr-block(1) 0
	>div {
		margin 2px
		padding 10px
		display inline-block
		position relative
		background-color #ECECEC
		transition background-color 200ms ease
		&:focus {
			outline none
		}
		&.isActive {
			background-color #53657B// #39adcc
			color white
			&:after {
				top 100%
				left 50%
				border solid transparent
				content " "
				height 0
				width 0
				position absolute
				pointer-events none
				border-color rgba(57, 173, 204, 0)
				border-top-color #53657B
				border-width 7px
				margin-left -8px
			}
		}
	}
}


