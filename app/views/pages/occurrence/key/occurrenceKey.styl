}


.blockComment {
	display none
}
+isAbove($tablet) {
	.blockComment {
		display block
		position absolute
		top 0
		right 0
		margin 0.5rem 1rem
		color #ccc
		text-align right
		font-size 0.85rem
		z-index 20
	}
}



.allData {
	h2 {
		margin-top 2rem
		border-bottom 1px solid #ddd
	}
	dl>div {
		div>dt {
			display none
		}
	}
	dd {
		padding-left 1rem
	}
	dt {
		width 300px
	}
	
	.discreet {
		color #ccc
	}
}
+isAbove($tablet) {
	.allData {
		dl>div {
			padding 0.25rem 1.5rem
			&:hover {
				background #ECECEC
			}
			dd {
				padding-left 0
			}
			dt {
				font-weight normal
			}
			dt, dd{
				display inline-block
			}
			div>dt {
				display inline-block
				visibility hidden
			}
		}
		&.compare .isDifferent {
			position relative
			&:before {
				content ' '
				display block
				position absolute
				background yellow
				width 10px
				height 10px
				left 5px
				border-radius 50%
				line-height 1rem
				text-align center
				top 9px
			}
		}
	}
}



