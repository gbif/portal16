.occurrenceKey {

	.block.discreet {
		background #f7f9fa
	}
	.article {
		position relative
	}
	.article__header {
		.sub {
			&:first-of-type {
				margin-top -1rem
			}
			color #bbb
		}
		h1 {
			.error {
				color tomato
			}
			.small {
				margin-top vrBlock(0.5)
			}
		}
	}
	.block-first {
		.blockContent {
			// max-width none
		}
	}
	.issues-high {
		background-color tomato
	}
	.block{
		position relative
	}
	.classification {
		display inline

		i:after {
			font-style normal
			content '\276f' // â¯
			font-size 80%
		}
		&.discreet {
			color #ddd
			a {
				color #bbb
			}
		}
