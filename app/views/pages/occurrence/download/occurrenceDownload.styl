.download-report {
    &__empty {
        color #aaa
        margin 150px auto
        text-align center
        max-width 400px
    }
    &__summary {
        display flex
        flex-wrap wrap
        margin - $halfGutter
        > div {
            margin $halfGutter
            flex 1 1 256px
            max-width 100%
            &:first-of-type {
                flex 0 0 256
                max-width 256px
            }
        }
        &__download {
            margin-top vrBlock(1)
            > div {
                margin-bottom vrBlock(2)
            }
            .gb-button--primary {
                width 200px
                max-width 100%
            }
        }
    }

    &__notifications {
        .badge-composite--warning, .badge-composite--error {
            margin-right 5px
        }
        > div {
            margin-top $halfGutter
            margin-bottom $halfGutter
        }
    }
    &__map {
        width 256px
        height 128px
        overflow hidden
        background-color #28282d
        background-image url('/img/wgs84_dark.png')
        background-position center
        background-size cover
        > div {
            padding 30px 0
            text-align center
            > div {
                color white
            }
        }
        &.isInvalid {
            >img {
                display none
             }
        }
        > img {
            width 256px
            height 256px
            float left
            margin-top -64px
        }
    }
}

.modal-dialog {
    .gb-modal-header {
        padding 30px
    }
    .gb-modal-body {
        &__content {
            padding-left 30px
            padding-right 30px
        }
    }
    .gb-modal-footer {
        padding 15px
        text-align right
    }
}


.gbifCubeForm {
    padding: 0.5rem;
    fieldset {
        legend {
            font-size: 1em;
            margin-bottom: 0;
            width: auto;
            line-height: inherit;
            border: none;
            color: inherit;
        }
    }
    &__mainFieldset {
        legend {
            font-size: 1.2rem;
            margin-bottom: .5rem;
        }
    }
    .gb-b3-issue-checkboxes {
        label {
            display: flex;
            align-items: start;
            margin-bottom: 0.5rem;
            input {
                margin-inline-end: 0.5rem;
                flex: 0 0 auto;
                margin-top: 3px;
            }
            span {
                flex: 1;
            }
        }
    }
}
