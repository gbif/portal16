                            </div>
                        </div>
                    </div-->
                    <div class="col-xs-12">
                        <gbmap mapstyle="'light'" style="height:500px"></gbmap>
                    </div>
                </div>
            </div>

        </section>

        {#<div class="horizontal-stripe--paddingless home__map">#}
            {#<gbmap taxon-key="'1'" mapstyle="'light'"></gbmap>#}
        {#</div>#}


    </div>
{% endblock %}

