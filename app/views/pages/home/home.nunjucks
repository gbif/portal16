{# home page, or front page #}
{% block page %}
    <div class="wrapper-horizontal-stripes home" ng-controller="homeCtrl as home">
        <div class="home__header" ng-controller="searchCtrl as omniSearch">
            <div class="container--desktop">
                <div class="home__header__hero-text">
                    <div class="home__header__name">
                        Global Biodiversity Information Facility
                    </div>
                    <h1>
                        Free and open access to biodiversity data
                    </h1>
                    <div class="home__header__search-bar search-box">
                        <form action="{$ gb.locales.urlPrefix $}/search"
                              ng-submit="omniSearch.updateSearch()">
                            <input id="siteSearchInputHome" type="text" placeholder="Search" name="q" autocomplete="off"
                                   value=""
                                   ng-init="omniSearch.freeTextQuery == ''"
                                   ng-model="omniSearch.freeTextQuery"
                                   aria-invalid="false"
                                   focus-me="true">
                            <a class="search-box__submit gb-icon-search2 inherit noUnderline"
                               ng-href="{$ gb.locales.urlPrefix $}/search?q={{ omniSearch.freeTextQuery }}" type="submit">
                                <span class="sr-only">search</span>
                            </a>
                        </form>
                    </div>
                    <div class="home__quicklinks">
                        <a href="{$ gb.locales.urlPrefix $}/occurrence/search" ng-href="{$ gb.locales.urlPrefix $}/occurrence/search?q={{ omniSearch.freeTextQuery }}" class="gb-button--brand--transparent">Occurrences</a>
                        <a href="{$ gb.locales.urlPrefix $}/species/search" ng-href="{$ gb.locales.urlPrefix $}/species/search?q={{ omniSearch.freeTextQuery }}" class="gb-button--brand--transparent">Species</a>
                        <a href="{$ gb.locales.urlPrefix $}/dataset/search" ng-href="{$ gb.locales.urlPrefix $}/dataset/search?q={{ omniSearch.freeTextQuery }}" class="gb-button--brand--transparent">Datasets</a>
                        <a href="{$ gb.locales.urlPrefix $}/what-is-gbif" class="gb-button--brand--transparent">What is GBIF?</a>
                    </div>
                </div>
                <div class="caption">
                    <i>Eulalia microphylla</i> Schmarda, 1861 observed in New Zealand. CC BY-NC 2016 <a href="/occurrence/1265894407">Ryan Brooks via iNaturalist</a>
                    {#<i>Abies balsamea</i> (L.) Mill. observed in United States. CC BY-NC 2016 <a href="/occurrence/1144979922">Emily Stone via iNaturalist</a>#}
                </div>
            </div>
        </div>
        
        <div class="horizontal-stripe--paddingless light-background">
            <div class="container--desktop">
                <div class="home__news">
                    <div class="text-center">
                        <h2>News from the network</h2>
                    </div>

                    {% macro newsArticle(newsStory, __) %}
                        {% if newsStory %}
                            <article class="card article-box hoverBox">
                                <div>
                                    {% if newsStory.images[0].self %}
                                    <a href="/{$ newsStory.targetUrl $}" class="card__stripe">
                                        <img src="//api.gbif.org/v1/image/unsafe/500x330/{$ newsStory.images[0].self | encodeURI $}"
                                             alt="" class="article-thumb">
                                    </a>
                                    {% endif %}
                                    <a href="/{$ newsStory.targetUrl $}" class="card__stripe inherit">
                                        <div class="card__content">
                                            <div class="article-box__tag">
                                                <span translate="cms.contentType.{$ newsStory.type $}" class="text-capitalize"></span>
                                            </div>
                                            <h4 class="article-box__title">
                                                {$ newsStory.title | truncate(80) $}
                                            </h4>
                                            <span class="article-box__footer">{$ newsStory.created | formatDate(gb.locales.current) $}</span>
                                        </div>
                                    </a>
                                </div>
                            </article>
                        {% endif %}
                    {% endmacro %}

                    {% macro eventArticle(newsStory, __) %}
                        {% if newsStory %}
                            <article class="card article-box hoverBox">
                                <div>
                                    <a ng-href="/{$ newsStory.targetUrl $}" class="card__stripe">
                                        <div class="date-box">
                                            <img src="//api.gbif.org/v1/image/unsafe/500x330/http://upload.wikimedia.org/wikipedia/commons/5/52/Spacer.gif"
                                                 alt="" class="article-thumb invisible">
                                            <div>
                                                <div>

                                                    <span>{$ newsStory.dateStart | formatDate(gb.locales.current, 'MMMM') $}</span>
                                                    <div>{$ newsStory.dateStart | formatDate(gb.locales.current, 'D') $}</div>
                                                    <span>{$ newsStory.dateStart | formatDate(gb.locales.current, 'YYYY') $}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </a>

                                    <a href="/{{ newsStory.targetUrl }}" class="card__stripe inherit">
                                        <div class="card__content">
                                            <div class="article-box__tag">
                                                <span class="text-capitalize">{$ __('cms.contentType.' + newsStory.type) $}</span>
                                            </div>
                                            <h4 class="article-box__title">{$ newsStory.title | truncate(80) $}</h4>
                                            <span class="article-box__footer">{$ newsStory.dateText $}</span>
                                        </div>
                                    </a>
                                </div>
                            </article>
                        {% endif %}
                    {% endmacro %}

                    <div class="articles">
                        {$ newsArticle(home.highlights.newsStory, __) $}
                        {$ newsArticle(home.highlights.dataStoryA, __) $}
                        {$ newsArticle(home.highlights.dataStoryB, __) $}
                        {$ eventArticle(home.highlights.event, __) $}
                    </div>
                    <div class="text-right">
                        <a href="{$ gb.locales.urlPrefix $}/cms/search" class="gb-button--flat text-uppercase small">Search articles, events and more</a>
                    </div>

                </div>
                <div class="container-fluid m-b-2 ng-cloak">
                    <div class="row">
                        <div class="col-xs-12" ng-class="{'col-md-6': home.hasFeed}">
                            <div class="home__about">
                                <h2>What is GBIF?</h2>
                                <div ng-class="{'home__about--columns': !home.hasFeed}">
                                    <p>
                                        A global network of publishers, researchers and nations that believe data about life on earth is worth most when shared.
                                        In total more than 700 millions species occurrences has been published.
                                    </p>
                                    <p>
                                        A world in which biodiversity information is freely and universally available for science, society and a sustainable future.
                                        Data discovered and accessed through GBIF are being used in many areas of scientific research and decision making. The GBIF network thus supports international policies and responses to key targets that seek to stop the loss of biodiversity.
                                    </p>
                                    <div class="text-right">
                                        <a href="sdf">Read more</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 home__rss" ng-if="home.hasFeed">
                            <div class="card">
                                <div class="card__stripe">
                                    <div class="card__content">
                                        News from <span translate="country.{{ home.country }}"></span>
                                    </div>
                                </div>
                                <a ng-href="{{ rssItem.link }}" class="card__stripe card__stripe--light home__rss__item" ng-repeat="rssItem in home.rssFeed | limitTo:2">
                                    <div class="card__content">
                                        <div>
                                            <h4 class="home__rss__title">
                                                {{ rssItem.title }}
                                            </h4>
                                            <p class="home__rss__description">
                                                {{ rssItem.description | truncate:80 }}
                                                <span class="home__rss__date discreet small discreet">
                                                    {{ rssItem.pubDate }}
                                                </span>
                                            </p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card home__map ng-cloak">
                    <div style="width:100%;height:0;padding-bottom:50%; position:relative;">
                        <div style="position:absolute;top:0;right:0;left:0;bottom:0;">
                            <gbmap style="height:100%" mapstyle="'light'"></gbmap>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        

        {#<article class="horizontal-stripe--paddingless home__featured bg-attached">#}
            {#<div class="container--normal">#}
                {#<div class="home__featured__text">#}
                    {#<p>#}
                        {#Data use#}
                    {#</p>#}
                    {#<div class="clearfix">#}
                        {#<h1>#}
                            {#<a class="inherit noUnderline"#}
                               {#href="http://demo.gbif.org/data-use/newsroom/uses/2015-murray-et-al">Is climate change#}
                                {#the most important cause of biodiversity loss?</a>#}
                        {#</h1>#}
                    {#</div>#}
                    {#<p>#}
                        {#<a class="inherit" href="http://demo.gbif.org/data-use/newsroom/uses/2015-murray-et-al">Read#}
                            {#more</a>#}
                    {#</p>#}
                {#</div>#}
            {#</div>#}
        {#</article>#}

        {#<div class="horizontal-stripe--paddingless white-background">#}
            {#<div class="home__occurrences">#}
                {#<div class="container--desktop">#}
                    {#<h1 count="//api.gbif.org/v1/occurrence/search">#}
                        {#&nbsp;#}
                    {#</h1>#}
                    {#<p>#}
                        {#Species observations and specimens#}
                    {#</p>#}
                    {#<p>#}
                        {#Data distributed by GBIF is the result of thousands of researchers, publishers and and other#}
                        {#that believe that data about life on our planet brings most value when shared.#}
                    {#</p>#}
                {#</div>#}
            {#</div>#}
        {#</div>#}

        <section class="horizontal-stripe--paddingless seperator features ng-cloak" ng-if="home.underDevelopment">
            <div class="features__intro container--normal">
                <h1>What is GBIF?</h1>
                <p>
