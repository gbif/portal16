.tabs--emphasized {
    .tab>a {
        font-size 14px
    }
}

.region-selector-select {
    margin-bottom vrBlock(1)
    select {
        border 1px solid $gray10
        outline none
        padding 3px
        background-color $paper
        width 120px
    }
}
.region-selector-tabs {
    display none
}
+isAbove($tablet) {
    .region-selector-select {
        display none
    }
    .region-selector-tabs {
        display block
    }
}

.main-counts {
    min-height 160px
}

.update-region {
    min-height 410px
}

.entity-counts {
    vertical-align middle
    text-align left
    .entity-count {
        display inline-block
        vertical-align middle
        margin-left vrBlock(1)

        > div {
            display inline-block
        }
        .count-number {
            font-size 2em
            font-weight lighter
        }
        .count-label {
            font-size 1.1em
            font-weight lighter
            line-height 1.2em
            text-transform capitalize
            text-align left
        }
    }
}

+isAbove($mobile){
    .entity-counts {
        margin vrBlock(0.5) auto
        text-align center
        .entity-count {
            text-align center
            .count-number {
                font-size 2.5em
            }
            .count-label {
                font-size 1.2
            }
        }
    }
}

+isAbove($tablet){
    .entity-counts {
        text-align center
        .entity-count {
            .count-number {
                font-size 4em
            }
            .count-label {
                font-size 1.6em
                padding-left 3px
            }
            .medium-long-label {
                max-width 170px
            }
            .extra-long-label {
                max-width 180px
            }
        }
    }
}

.status-hover {
    position relative
    z-index 200;
}

.participant-list__columned {
    header {
        margin vrBlock(2) auto vrBlock(1)
        max-width 350px
        border-bottom 1px solid $gray
    }
    
    h3 {
        margin vrBlock(1) auto
        text-transform uppercase
    }
    
    ol {
        margin 0
        padding 0 vrBlock(1)
        li {
            margin-left 15px
            list-style-type decimal
            text-align left
            margin-bottom 5px
        }
    }
    
    footer {
        margin vrBlock(1) auto vrBlock(2)
        content "&nbsp;"
        width 200px
        border-bottom 1px solid $gray
    }
}

+isAbove($tablet) {
    .participant-list__columned {
        ol {
            margin vrBlock(2) auto
            column-count 2
            column-gap 30px
        }
    }
}
+isAbove($laptop) {
    .participant-list__columned {
        ol {
            margin vrBlock(2) auto
            column-count 4
            column-gap 30px
        }
    }
}

.voting_participant {
    color $votingParticipant
}

.associate_country_participant {
    color $associateCountryParticipant
}
.data-publisher {
    color $discreetInk
}
.count-literature {
    color $orange3
}

.chart-literature {
    position relative
    padding-bottom 40%
    max-width 600px
    margin 0 auto
    literature-bar-chart-yearly {
        margin-top vrBlock(1)
    }
    .bar {
        fill $orange3
    }
    
    .bar:hover {
        fill $orange1
    }
    
    .axis {
        font 12px sans-serif
    }
    
    .axis path,
    .axis line {
        fill none
        stroke #000
        shape-rendering crispEdges
    }

    .text {
        font-family sans-serif
        font-size 14px
        fill $blueTintedBlack
    }

    .chart-title {
        font-family sans-serif
        font-size 14px
        fill $blueTintedBlack
    }

    .axis-text {
        font-family sans-serif
        font-size 12px
        fill $blueTintedBlack
    }

}
+isAbove($tablet) {
    .chart-literature {
        padding-bottom 33%
    }
}
+isAbove($laptop) {
    .chart-literature {
        padding-bottom 25%
    }
}
+isAbove($desktop) {
    .chart-literature {
        padding-bottom 22%
    }
}

.map-background {
    fill none
}

.map-shadow {
    fill $white
}

.svg-container {
    position relative
    padding-bottom 49%
    overflow hidden
}

.svg-content {
    position absolute
    top 0
    left 0
}

.boundary {
    stroke #fff
    stroke-width 0.3px
}

.active-polygon {
    stroke #fff
    stroke-width 0.8px
}

.svg-map-container {
    position relative
}
