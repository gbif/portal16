.doi {
    font-size 12px
    text-decoration none
    display inline-block
    span {
        border 1px solid $stripeBorderColor
    }

    span:first-of-type {
        transition all 300ms ease
        background $linkColor
        padding 0 4px
        border-radius 5px 0 0 5px
        color white
        border-right-width 0
        border-color $linkColor
    }
    span:last-of-type {
        color $gray80
        background white
        text-decoration none
        padding 0 7px
        border-radius 0 5px 5px 0
        border-left-width 0
    }
}
a.doi {
    &:hover {
        color $gray80
        text-decoration none
        span:first-of-type {
            background darken($linkColor, 20)
            border-color darken($linkColor, 20)
        }
    }
}