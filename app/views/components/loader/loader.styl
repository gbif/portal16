// scaling... any units
$loader_width = 100px

.loader {
    position relative
    margin 0 auto
    width $loader_width
    &:before {
        content ''
        display block
        padding-top 100%
    }
}

.circular {
    animation rotate 1s linear infinite
    height 100%
    transform-origin center center
    width 100%
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    margin auto
    padding 20px
}

.path {
    stroke rgba(0, 0, 0, 0.1)
    stroke-dasharray 1, 200
    stroke-dashoffset 0
    animation dash 1.5s ease-in-out infinite
    stroke-linecap round
}

@keyframes rotate {
    100% {
        transform rotate(360deg)
    }
}

@keyframes dash {
    0% {
        stroke-dasharray 1, 200
        stroke-dashoffset 0
    }
    50% {
        stroke-dasharray 89, 200
        stroke-dashoffset -35px
    }
    100% {
        stroke-dasharray 89, 200
        stroke-dashoffset -124px
    }
}
