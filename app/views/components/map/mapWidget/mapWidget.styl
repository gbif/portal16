.mapWidget {
    overflow initial
    background darken($lightBackground, 5)
    position relative
    &__mapArea {
        position relative
        z-index 10
    }
    .ol-scale-line {
        position: unset;
    }
    .mapPopups {
        z-index 60
    }
    &.fullscreen.fullscreen.fullscreen {
        position fixed
        z-index $zSiteOverlay
        height auto
        top 0//$navBar_height
        bottom 0
        width 100%
        left 0
        right 0
        .mapWidget__mapWrapper, .mapWidget__mapArea {
            height calc(100vh - 40px)
            padding-bottom 0 !important
        }
        .mapWidget__spacer {
            display none
        }
    }
    &.isSmall {
        .mapWidget__options, .mapWidget__inlineOption {
            width 100%
            display inline-block
        }
        .time-slider__container {
            margin-left 20px
        }
        .mapWidget__control {
            padding 0
            overflow auto
            bottom 0
            left 0
            top 0
            >div {
                min-height 100%
                min-width 100%
            }
        }
    }
    &__mapButtons {
        position absolute
        z-index 20
        left 0.5rem
        top 0.5rem
        background #aaa
        >a, .mapButton {
            background #fff
            font-size 22px
            display block
            text-decoration none
            text-align center
            height 24px
            width 24px
            line-height 22px
            background-color rgba(0,60,136,.5)
            border 1px solid #aaa
            background white
            color #444
            &:hover {
                background #efefef
            }
            &.smallIcon {
                font-size 14px
            }
            &.is-active {
                color $navBar_background_color
            }
            &[tooltip]:after {
                border-radius 2px
                background-color #585858
                color #fff
                content attr(tooltip)
                font-size 12px
                visibility hidden
                opacity 0
                padding 5px 7px
                margin 7px
                position absolute
                left 100%
                white-space nowrap
                z-index $pageFab//1000
            }
            &[tooltip]:hover:after {
                visibility visible
                opacity 1
            }
        }
        
    }
    &__drawButtons {
        position absolute
        z-index 20
        right 0.5rem
        top 0.5rem
        background #aaa
        >a {
            background #fff
            font-size 22px
            display block
            text-decoration none
            text-align center
            height 24px
            width 24px
            line-height 22px
            background-color rgba(0,60,136,.5)
            border 1px solid #aaa
            background white
            color #444
            &:hover {
                background #efefef
            }
            &.smallIcon {
                font-size 14px
            }
            &.is-active {
                color $navBar_background_color
            }
        }
        
    }
    &__progress {
        position absolute
        bottom 0
        left 0
        height 3px
        background deepskyblue
        width 0
        transition width 250ms
        max-width 100%
        z-index 15
    }
    &__mapWrapper {
        position relative
        z-index 5
    }
    &__inlineOption, &__options {
        display inline-block
    }
}

.time-slider__card {
    display inline-block
    //border 1px solid rgba(0, 0, 0, 0.2)
    //border-radius 3px
    font-size 12px
    .time-slider__buttons, .time-slider__container {
        display inline-block
        padding 5px
        color #bbb
    }
    .time-slider__container {
        padding 2px 20px 2px 0 //from tweaking the numbers to align.
    }
    .time-slider__slider {
        width 150px
    }
}

.fixedSizes {
    .mapWidget {
        .mapWidget__spacer {
            width 100%
            height 0
            padding-bottom 70%
        }
        .mapWidget__mapWrapper {
            position relative
            .mapWidget__mapArea {
                position absolute
                top 0
                right 0
                left 0
                bottom 0
            }
        }
        &.isLarge {
            .mapWidget__spacer {
                width 100%
                height 0
                padding-bottom 40%
            }
        }
    }
}

.fitSize {
    .mapWidget {
        height 100%
        width 100%
        .mapWidget__mapWrapper{
            height calc(100% - 40px)
        }
        .mapWidget__mapArea {
            height 100%
        }
        .mapWidget__spacer {
            display none
        }
    }
    &--noBar {
        .mapWidget {
            .mapWidget__mapWrapper {
                height 100%
            }
        }
    }
}

.fitContainer {
    .mapWidget {
        height 100%
        width 100%
        .mapWidget__mapWrapper{
            height 100%
        }
        .mapWidget__mapArea {
            height 100%
        }
        .mapWidget__spacer {
            display none
        }
    }
    &--noBar {
        .mapWidget {
            .mapWidget__mapWrapper {
                height 100%
            }
        }
    }
}

